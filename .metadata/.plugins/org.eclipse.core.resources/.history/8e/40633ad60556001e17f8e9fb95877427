#spring.datasource.driverClassName=com.mysql.cj.jdbc.Driver
# We are using my sql dialect not oracle (Means what systax we are going to use for sending the query to DB)
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dilect 
# spring data jpa will create ddl cmd on it's own || auto table creation

#spring.jpa.show-sql=true
# if the table is not present table will be auto created and from 2nd time table will be updated & teble will not be droped
spring.jpa.hibernate.ddl-auto=update 
spring.jpa.generate-ddl=true
